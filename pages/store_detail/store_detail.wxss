/* pages/store_detail/store_detail.wxss */
.container {  
    box-sizing:border-box;  
    padding:20px;  
}   
.previewimg{  
    float:left;  
    width:100%;  
    height:200px;  
    margin:2%;
    text-align: left;
}  
.previewimg image{  
    width:100%;  
    height:100%;  
}


.tool{
  height: 64rpx;
  text-align: center;
  line-height: 64rpx;
  margin: 20rpx 28rpx 20rpx 0;
}
.tool-item{
  display: inline-block;
  vertical-align: top;
  margin-right: 30rpx;
}
.tool-item image{
  height: 60rpx;
  width: 60rpx;
  vertical-align: -3px;
  margin-right: 10rpx;
}
.comment image{
  transform: scale(.85);
}

.button-sp-area{
    margin: 0 auto;
    padding-top: 15px;
    width: 60%;
}

.content {
  align-items: left;
  text-align: left;
}

/* pages/userInfo/myShop/myShop.wxss */
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.kind-list__img {
  width: 20px;
  height: 20px;
  margin-right: 8px;
}

.weui-cell {
  margin-top: 8rpx;
  margin-bottom: 8rpx;
}
.weui-cell_access {
  margin-top: 8rpx;
  margin-bottom: 8rpx;
}

page, .page, .page__bd {
  height: 100%;
}

.page__bd {
  padding-bottom: 0;
}

.weui-tab__content {
  text-align: center;
}


.idcard-item {
  display: flex;
  width: 100%;
  padding: 10px;
  border-bottom: 1px solid #eee;
}

.idcard-image > image {
  width: 150px;
  height: 100px;
  border: 1px solid #eee;
}

.idcard-image {
  padding-left: 10px;
}

.idcard-detail {
  font-size: 14px;
  margin-left: 10px;
}
