<!--index.wxml-->
<view class="container">

  <image wx-if="{{coverImage}}" class="idcard" src="{{coverImage}}"></image>
  <button class="upload" type="default" bindtap="uploadFile"> 上传封面图片 </button>

  <form bindsubmit="addBlog">
    <input name="title" type="text" placeholder="请输入主题"></input>
    <textarea name="content" auto-height placeholder="请输入内容" maxlength="1000"/>
    <button form-type="submit" type="primary">发布</button>
  </form>

</view>
