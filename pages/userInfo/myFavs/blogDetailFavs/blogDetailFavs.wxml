<!--pages/userInfo/myFavs/blogDetailFavs/blogDetailFavs.wxml-->
<view class="container">
  <view class="title">{{title}}</view>
  <view class="previewimg">
    <image src="{{cover}}" data-src="{{cover}}" bindtap="previewImage"></image>
  </view>
  <view class="content">
    {{content}}
  </view>

   <!--修改、删除按钮-->
  <view class="page__bd page__bd_spacing">
    <button class="weui-btn" type="warn" bindtap='deleteBlogFavs'>删除</button>
  </view>

</view>
