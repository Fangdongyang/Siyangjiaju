<!--pages/userinfo/userinfo-->
<view class="container">
  <view class="userinfo">
    <button wx:if="{{!hasUserInfo && canIUse}}" open-type="getUserInfo" bindgetuserinfo="getUserInfo"> 点击登录</button>
    <block wx:else>
      <image bindtap="bindViewTap" class="userinfo-avatar" src="{{userInfo.avatarUrl}}" mode="cover"></image>
      <text class="userinfo-nickname">{{userInfo.nickName}}</text>
    </block>
  </view>
  <view class="weui-cells weui-cells_after-title">
    <navigator url="/pages/publish/publish" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
      <view class="weui-cell__bd">发布文章</view>
      <view class="weui-cell__ft weui-cell__ft_in-access"></view>
    </navigator>
  
    <navigator url="/pages/blogs_my/blogs_my" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
      <view class="weui-cell__bd">我的文章</view>
      <view class="weui-cell__ft weui-cell__ft_in-access"></view>
    </navigator>
    
  </view>
</view>