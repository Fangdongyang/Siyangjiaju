<!--This is windows page-->
<view class="page">
  <view class="page__bd">
    <view class="weui-tab">
      <view class="weui-navbar">
        <block wx:for="{{tabs}}" wx:key="*this">
          <view id="{{index}}" class="weui-navbar__item {{activeIndex == index ? 'weui-bar__item_on' : ''}}" bindtap="tabClick">
            <view class="weui-navbar__title">{{item}}</view>
          </view>
        </block>
        <view class="weui-navbar__slider" style="left: {{sliderLeft}}px; transform: translateX({{sliderOffset}}px); -webkit-transform: translateX({{sliderOffset}}px);"></view>
      </view>
      <view class="weui-tab__panel">
        <!--选项一的内容-->
        <view class="weui-tab__content" hidden="{{activeIndex != 0}}">
           <!--获取纱窗门店列表-->
  <view class="idcard-item" wx:for="{{list}}" wx:key="*this" ontap="getDetail" data-blogid="{{item._id}}">
    <view class="idcard-image">
      <image src="{{item.cover}}"></image>
    </view>
    <view class="idcard-detail">
      <view class="title">标题: {{item.title}}</view>
      <view class="content">内容： {{item.content}}</view>
    </view>
  </view>
         <!--底部广告词-->
          <view>品牌门店入驻中！欢迎咨询！</view>
          <view>电话：18752010858 林先生</view>
          <view>微信：18752010858</view>
        </view>
        <!--选项二的内容-->
        <view class="weui-tab__content" hidden="{{activeIndex != 1}}">
         <!--获取纱窗厂家列表-->
  <view class="idcard-item" wx:for="{{list}}" wx:key="*this" ontap="getDetail" data-blogid="{{item._id}}">
    <view class="idcard-image">
      <image src="{{item.cover}}"></image>
    </view>
    <view class="idcard-detail">
      <view class="title">标题: {{item.title}}</view>
      <view class="content">内容： {{item.content}}</view>
    </view>
  </view>
       
       <!--底部广告词-->
        <view>厂商入驻中！欢迎咨询！</view>
          <view>电话：18752010858 林先生</view>
          <view>微信：18752010858</view>
        </view>
        
      </view>
    </view>
  </view>
</view>