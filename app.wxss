/**app.wxss**/
@import 'weui.wxss';
.container {
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  justify-content: space-between;
}

page{
    background-color: rgb(241, 238, 238);
    font-size: 16px;
    font-family: -apple-system-font,Helvetica Neue,Helvetica,sans-serif;
}
.page__hd {
    padding: 10px;
}
.page__bd {
    padding-bottom: 10px;
}
.page__bd_spacing {
    padding-left: 10px;
    padding-right: 10px;
}

.page__ft{
    padding-bottom: 10px;
    text-align: center;
}

.page__title {
    text-align: left;
    font-size: 20px;
    font-weight: 400;
}

.page__desc {
    margin-top: 5px;
    color: #888888;
    text-align: left;
    font-size: 14px;
}